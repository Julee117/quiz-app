<div>
  <h1><%= @quiz.name %></h1>
  <%= form_tag("/scores") do %>
  <%= hidden_field_tag :quiz , @quiz.id %>
  <div>
    <ul class="bullets">
      <% @quiz.questions.each do |question| %>
      <div class="question">
        <li>
          <%= question.content %>
          <ul>
            <% question.choices.sort.each do |choice| %>
            <li>
              <%= radio_button_tag("choice[#{question.id}]", choice.id) %>
              <%= choice.content %>
            </li>
            <% end %>
          </ul>
        </li>
      </div>
      <% end %>
    </ul>
  </div>
  <div class="text-center">
    <%= submit_tag("Submit", class: "btn btn-success") %>
    <%= link_to 'Edit', edit_quiz_path(@quiz), class: "btn btn-success" %>
  </div>
  <% end %>
</div>
